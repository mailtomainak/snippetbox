{{template "base" .}}

{{define "title"}}
Home
{{end}}

{{define "body"}}

    {{if .Snippets}}
        <h2>Latest Snippets</h2>
        <table>
        <tr>
            <th>Title</th>
            <th>Created</th>
            <th>ID</th>
        </tr>
        {{range .Snippets}}
        <tr><td><a href='/snippet/{{.ID}}'>{{.Title}}</a></td>
                    <td>{{humanDate .Created}}</td>
                    <td>#{{.ID}}</td>
                </tr>
                {{end}}
        </table>
    {{else}}
        <p>There's nothing to see here yet!</p>
    {{end}}
{{end}}